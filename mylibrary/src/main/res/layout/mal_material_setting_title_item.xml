<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/mal_card_padding"
    android:paddingRight="@dimen/mal_card_padding"
    android:paddingStart="@dimen/mal_card_padding"
    android:paddingEnd="@dimen/mal_card_padding"
    android:paddingTop="@dimen/mal_card_padding"
    android:paddingBottom="@dimen/mal_card_padding">

    <ImageView
        android:id="@+id/mal_title_item_icon"
        android:layout_width="@dimen/mal_title_item_image_size"
        android:layout_height="@dimen/mal_title_item_image_size"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/mal_card_padding"
        android:paddingRight="@dimen/mal_card_padding"
        android:paddingStart="@dimen/mal_card_padding"
        android:paddingEnd="@dimen/mal_card_padding"
        android:adjustViewBounds="false"
        android:contentDescription="@string/mal_action_icon"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:srcCompat="@android:drawable/sym_def_app_icon"/>

    <TextView
        android:id="@+id/mal_title_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/mal_card_padding"
        android:layout_marginStart="@dimen/mal_card_padding"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

</LinearLayout>