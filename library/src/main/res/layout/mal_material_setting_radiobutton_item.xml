<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/mal_card_padding"
    android:paddingBottom="@dimen/mal_card_padding">

    <include
        layout="@layout/mal_material_setting_text_item"/>

    <RadioButton
        android:id="@+id/mal_radiobutton_item_radiobutton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/mal_checkbox_height"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/mal_card_padding"
        android:layout_marginRight="@dimen/mal_button_padding"
        android:layout_marginStart="@dimen/mal_card_padding"
        android:layout_marginEnd="@dimen/mal_button_padding"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerInside" />

</LinearLayout>