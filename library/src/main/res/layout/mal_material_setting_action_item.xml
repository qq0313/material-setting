<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/mal_card_padding"
    android:paddingBottom="@dimen/mal_card_padding">

    <ImageView
        android:id="@+id/mal_action_item_icon"
        android:layout_width="@dimen/mal_action_image_width"
        android:layout_height="@dimen/mal_action_image_height"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/mal_list_padding"
        android:layout_marginRight="@dimen/mal_card_padding"
        android:layout_marginStart="@dimen/mal_list_padding"
        android:layout_marginEnd="@dimen/mal_card_padding"
        android:adjustViewBounds="false"
        android:contentDescription="@string/mal_action_icon"
        android:cropToPadding="false"
        android:scaleType="centerInside" />

    <include
        layout="@layout/mal_material_setting_text_item"/>

</LinearLayout>