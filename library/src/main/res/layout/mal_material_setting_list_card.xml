<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/mal_card_padding"
    android:layout_marginRight="@dimen/mal_card_padding"
    android:layout_marginStart="@dimen/mal_card_padding"
    android:layout_marginEnd="@dimen/mal_card_padding"
    android:layout_marginTop="@dimen/mal_card_padding"
    android:paddingLeft="@dimen/mal_card_padding"
    android:paddingRight="@dimen/mal_card_padding"
    android:paddingStart="@dimen/mal_card_padding"
    android:paddingEnd="@dimen/mal_card_padding"
    android:paddingTop="@dimen/mal_list_padding"
    android:paddingBottom="@dimen/mal_list_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mal_list_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mal_list_padding"
            android:layout_marginRight="@dimen/mal_list_padding"
            android:layout_marginStart="@dimen/mal_list_padding"
            android:layout_marginEnd="@dimen/mal_list_padding"
            android:layout_marginTop="@dimen/mal_list_padding"
            android:layout_marginBottom="@dimen/mal_card_padding"
            android:textColor="?android:attr/textColorSecondary"
            tool:text="Author"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mal_list_card_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingTop="@dimen/mal_card_padding"
            android:paddingBottom="@dimen/mal_card_padding">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</android.support.v7.widget.CardView>